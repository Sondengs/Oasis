<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esansoft.oasis">

    <application
        android:name="com.esansoft.base.OasisApp"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.login.Login"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentUser">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="esansoft"
                    android:scheme="esansoftrefac" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.Main"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentUser" />
        <activity
            android:name=".ui.find_work_place.FindWorkPlace"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentUser">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.sign_up.SignUp"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentUser" />
        <activity android:name=".ui.scan.ScanBarcode" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>